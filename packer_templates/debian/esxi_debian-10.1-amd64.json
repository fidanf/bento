{
  "builders": [
    {
      "type": "vmware-iso",
      "boot_wait": "5s",
      "boot_key_interval": "10ms",
      "boot_keygroup_interval": "10ms",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "{{ user `iso_checksum_type` }}",
      "iso_url": "{{user `mirror` }}/{{ user `mirror_directory` }}/{{ user `iso_name` }}",
      "http_directory": "http",
      "boot_command": [
        "<esc><wait>",
        "install <wait>",
        " preseed/url=https://gist.githubusercontent.com/fidanf/b84097314ffe6d627fef3083801199c0/raw/6d21e04a96f5ec24cb97bc5e1923015db5409ab3/preseed.cfg <wait>",
        "debian-installer=en_US.UTF-8 <wait>",
        "auto <wait>",
        "locale=en_US.UTF-8 <wait>",
        "kbd-chooser/method=fr <wait>",
        "keyboard-configuration/xkb-keymap=fr <wait>",
        "netcfg/disable_autoconfig=true <wait>",
        "netcfg/dhcp_failed=note <wait>",
        "netcfg/dhcp_options=Configure network manually <wait>",
        "netcfg/get_ipaddress={{ user `ip_address` }} <wait>",
        "netcfg/get_netmask={{ user `netmask` }} <wait>",
        "netcfg/hostname={{ user `vm_name` }} <wait>",
        "netcfg/get_gateway={{ user `gateway` }} <wait>",
        "netcfg/get_hostname={{ user `vm_name` }} <wait>",
        "netcfg/get_nameservers={{ user `nameservers` }} <wait>",
        "netcfg/get_domain={{ user `domain` }} <wait>",
        "netcfg/confirm_static=true <wait>",
        "fb=false <wait>",
        "debconf/frontend=noninteractive <wait>",
        "console-setup/ask_detect=false <wait>",
        "console-keymaps-at/keymap=fr <wait>",
        "grub-installer/bootdev=/dev/sda <wait>",
        "<enter><wait>"
      ],
      "disk_size": "{{ user `disk_size` }}",
      "guest_os_type": "other-64",
      "keep_registered": true,
      "skip_export": true,
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "tools_upload_flavor": "linux",
      "vm_name": "{{ user `vm_name` }}",
      "memory": "{{ user `memory` }}",
      "cpus": "{{ user `cpus` }}",
      "cores": "{{ user `cores` }}",
      "remote_type": "esx5",
      "remote_host": "{{ user `esxi_host` }}",
      "remote_datastore": "{{ user `esxi_datastore` }}",
      "remote_username": "{{ user `esxi_username` }}",
      "remote_password": "{{ user `esxi_password` }}",
      "shutdown_command": "echo 'vagrant' | sudo -S /sbin/shutdown -hP now",
      "vmx_data": {
        "ethernet0.pciSlotNumber": "32",
        "ethernet0.networkName": "{{ user `network` }}"
      }
    }
  ],
  "post-processors": [],
  "provisioners": [
    {
      "type": "file",
      "source": "{{ user `ansible_pubkey_src` }}",
      "destination": "{{ user `ansible_pubkey_dest` }}"
    },
    {
      "environment_vars": [
        "HOME_DIR=/home/vagrant"
      ],
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E sh -eux '{{.Path}}'",
      "expect_disconnect": true,
      "scripts": [
        "scripts/ansible.sh",
        "scripts/update.sh",
        "../_common/motd.sh",
        "../_common/sshd.sh",
        "scripts/networking.sh",
        "scripts/systemd.sh",
        "scripts/cleanup.sh",
        "../_common/minimize.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "ansible_pubkey_src": "ssh/ansible_id_rsa_pub",
    "ansible_pubkey_dest": "/tmp/ansible_id_rsa_pub",
    "box_basename": "debian-10.2",
    "cpus": "2",
    "cores": "1",
    "memory": "2048",
    "disk_size": "20480",
    "network": "NAT Network",
    "ip_address": "192.168.1.52",
    "netmask": "255.255.255.0",
    "gateway": "192.168.1.1",
    "nameservers": "192.168.1.1",
    "domain": "",
    "vm_name": "worker03-beta",
    "iso_checksum": "e43fef979352df15056ac512ad96a07b515cb8789bf0bfd86f99ed0404f885f5",
    "iso_checksum_type": "sha256",
    "iso_name": "debian-10.2.0-amd64-netinst.iso",
    "mirror": "http://cdimage.debian.org/cdimage/release",
    "mirror_directory": "10.2.0/amd64/iso-cd",
    "preseed_path": "debian-10/esxi-preseed.cfg"
  }
}