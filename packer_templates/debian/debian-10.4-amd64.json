{
  "builders": [
    {
      "type":                           "virtualbox-iso",
      "boot_command": [
        "<esc><wait>",
        "install <wait>",
        " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{ user `preseed_path` }} <wait>",
        "debian-installer=en_US.UTF-8 <wait>",
        "auto <wait>",
        "locale=en_US.UTF-8 <wait>",
        "kbd-chooser/method=us <wait>",
        "keyboard-configuration/xkb-keymap=us <wait>",
        "netcfg/get_hostname={{ .Name }} <wait>",
        "netcfg/get_domain=vagrantup.com <wait>",
        "fb=false <wait>",
        "debconf/frontend=noninteractive <wait>",
        "console-setup/ask_detect=false <wait>",
        "console-keymaps-at/keymap=us <wait>",
        "grub-installer/bootdev=/dev/sda <wait>",
        "<enter><wait>"
      ],
      "boot_wait":                      "10s",
      "disk_size":                      "{{ user `disk_size` }}",
      "guest_additions_url":            "{{ user `guest_additions_url` }}",
      "guest_additions_path":           "VBoxGuestAdditions_{{ .Version }}.iso",
      "guest_os_type":                  "Debian_64",
      "hard_drive_interface":           "sata",
      "headless":                       "{{ user `headless` }}",
      "http_directory":                 "{{ user `http_directory` }}",
      "iso_checksum":                   "{{ user `iso_checksum` }}",
      "iso_url":                        "{{ user `mirror` }}/{{ user `mirror_directory` }}/{{ user `iso_name` }}",
      "output_directory":               "{{ user `build_directory` }}/packer-{{ user `template` }}-virtualbox",
      "shutdown_command":               "echo 'vagrant' | sudo -S /sbin/shutdown -hP now",
      "ssh_username":                   "vagrant",
      "ssh_password":                   "vagrant",
      "ssh_port":                       22,
      "ssh_timeout":                    "30m",
      "memory":                         "{{ user `memory` }}",
      "cpus":                           "{{ user `cpus` }}",
      "virtualbox_version_file":        ".vbox_version",
      "vm_name":                        "{{ user `template` }}-{{ user `build_timestamp` }}"
    },
    {
      "type":                           "vmware-iso",
      "boot_command": [
        "<esc><wait>",
        "install <wait>",
        " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{ user `preseed_path` }} <wait>",
        "debian-installer=en_US.UTF-8 <wait>",
        "auto <wait>",
        "locale=en_US.UTF-8 <wait>",
        "kbd-chooser/method=us <wait>",
        "keyboard-configuration/xkb-keymap=us <wait>",
        "netcfg/get_hostname={{ .Name }} <wait>",
        "netcfg/get_domain=vagrantup.com <wait>",
        "fb=false <wait>",
        "debconf/frontend=noninteractive <wait>",
        "console-setup/ask_detect=false <wait>",
        "console-keymaps-at/keymap=us <wait>",
        "grub-installer/bootdev=/dev/sda <wait>",
        "<enter><wait>"
      ],
      "boot_wait":                      "10s",
      "disk_size":                      "{{ user `disk_size` }}",
      "guest_os_type":                  "debian8-64",
      "headless":                       "{{ user `headless` }}",
      "http_directory":                 "{{user `http_directory` }}",
      "iso_checksum":                   "{{ user `iso_checksum` }}",
      "iso_url":                        "{{ user `mirror` }}/{{ user `mirror_directory` }}/{{ user `iso_name` }}",
      "output_directory":               "{{ user `build_directory` }}/packer-{{ user `template` }}-vmware",
      "shutdown_command":               "echo 'vagrant' | sudo -S /sbin/shutdown -hP now",
      "ssh_username":                   "vagrant",
      "ssh_password":                   "vagrant",
      "ssh_port":                       22,
      "ssh_timeout":                    "30m",
      "tools_upload_flavor":            "linux",
      "vm_name":                        "{{ user `template` }}-{{ user `build_timestamp` }}",
      "memory":                         "{{ user `memory` }}",
      "cpus":                           "{{ user `cpus` }}",
      "cores":                          "{{ user `cores` }}",
      "vmx_remove_ethernet_interfaces": true,
      "vmx_data": {
        "ethernet0.pciSlotNumber":      "32",
        "virtualHW.version":            12
      }
    }
  ],
  "post-processors": [
    [
      {
        "type":                       "vagrant",
        "output":                     "../../builds/{{ user `box_basename` }}.{{ .Provider }}.box",
        "only": [
          "virtualbox-iso"
        ]
      },
      {
        "type":                       "vagrant-cloud",
        "access_token":               "{{ user `vagrant_cloud_token` }}",
        "box_tag":                    "{{ user `vagrant_cloud_repo` }}",
        "version":                    "{{ user `box_version` }}",
        "version_description":        "{{ user `box_description` }}",
        "only": [
          "virtualbox-iso"
        ]
      }
    ]
  ],
  "provisioners": [
    {
      "environment_vars": [
        "HOME_DIR=/home/vagrant",
        "http_proxy={{ user `http_proxy` }}",
        "https_proxy={{ user `https_proxy` }}",
        "no_proxy={{ user `no_proxy`}}"
      ],
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{ .Vars }} sudo -S -E sh -eux '{{ .Path }}'",
      "expect_disconnect": true,
      "scripts": [
        "{{ template_dir }}/scripts/update.sh",
        "{{ template_dir }}/../_common/motd.sh",
        "{{ template_dir }}/../_common/sshd.sh",
        "{{ template_dir }}/scripts/networking.sh",
        "{{ template_dir }}/scripts/sudoers.sh",
        "{{ template_dir }}/../_common/vagrant.sh",
        "{{ template_dir }}/scripts/systemd.sh",
        "{{ template_dir }}/../_common/virtualbox.sh",
        "{{ template_dir }}/../_common/vmware.sh",
        "{{ template_dir }}/scripts/cleanup.sh",
        "{{ template_dir }}/../_common/minimize.sh"
      ]
    }
  ],
  "variables": {
    "box_basename":                 "debian-10.4",
    "build_directory":              "{{ template_dir }}/../../builds",
    "build_timestamp":              "{{ isotime \"20060102150405\" }}",
    "template":                     "debian-10.4-amd64",
    "http_directory":               "{{ template_dir }}/http",
    "cpus":                         "1",
    "cores":                        "1",
    "memory":                       "2048",
    "disk_size":                    "65536",
    "disk_mode":                    "thin",
    "headless":                     "",
    "http_proxy":                   "{{ env `http_proxy` }}",
    "https_proxy":                  "{{ env `https_proxy` }}",
    "no_proxy":                     "{{ env `no_proxy` }}",
    "guest_additions_url":          "",
    "iso_checksum":                 "sha256:ab3763d553330e90869487a6843c88f1d4aa199333ff16b653e60e59ac1fc60b",
    "iso_name":                     "debian-10.4.0-amd64-netinst.iso",
    "mirror":                       "http://cdimage.debian.org/cdimage/release",
    "mirror_directory":             "10.4.0/amd64/iso-cd",
    "name":                         "debian-10.4",
    "preseed_path":                 "debian-10/preseed.cfg",
    "vagrant_cloud_token":          "{{ env `vagrantcloud_token` }}",
    "vagrant_cloud_repo":           "rgsystems/buster64",
    "box_version":                  "1.0.{{ timestamp }}",
    "box_description":              "Debian version: 10.04. <br> VirtualBox version: 6.1.10. <br> Disk size 65GB."
  }
}
