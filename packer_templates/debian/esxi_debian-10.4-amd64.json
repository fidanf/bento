{
  "builders": [
    {
      "type":                   "vmware-iso",
      "boot_wait":              "5s",
      "boot_key_interval":      "10ms",
      "boot_keygroup_interval": "10ms",
      "iso_checksum":           "{{ user `iso_checksum` }}",
      "iso_url":                "{{ user `mirror` }}/{{ user `mirror_directory` }}/{{ user `iso_name` }}",
      "http_directory":         "http",
      "boot_command": [
        "<esc><wait>",
        "install <wait>",
        " preseed/url=https://gist.githubusercontent.com/fidanf/b84097314ffe6d627fef3083801199c0/raw/6d21e04a96f5ec24cb97bc5e1923015db5409ab3/preseed.cfg <wait>",
        "debian-installer=en_US.UTF-8 <wait>",
        "auto <wait>",
        "locale=en_US.UTF-8 <wait>",
        "kbd-chooser/method=fr <wait>",
        "keyboard-configuration/xkb-keymap=fr <wait>",
        "netcfg/disable_autoconfig=true <wait>",
        "netcfg/dhcp_failed=note <wait>",
        "netcfg/dhcp_options=Configure network manually <wait>",
        "netcfg/get_ipaddress={{ user `ip_address` }} <wait>",
        "netcfg/get_netmask={{ user `netmask` }} <wait>",
        "netcfg/hostname={{ user `vm_name` }} <wait>",
        "netcfg/get_gateway={{ user `gateway` }} <wait>",
        "netcfg/get_hostname={{ user `vm_name` }} <wait>",
        "netcfg/get_nameservers={{ user `nameservers` }} <wait>",
        "netcfg/get_domain={{ user `domain` }} <wait>",
        "netcfg/confirm_static=true <wait>",
        "fb=false <wait>",
        "debconf/frontend=noninteractive <wait>",
        "console-setup/ask_detect=false <wait>",
        "console-keymaps-at/keymap=fr <wait>",
        "grub-installer/bootdev=/dev/sda <wait>",
        "<enter><wait>"
      ],
      "disk_size":            "{{ user `disk_size` }}",
      "disk_type_id":         "{{ user `disk_type_id` }}",
      "guest_os_type":        "debian8-64",
      "keep_registered":      true,
      "skip_export":          true,
      "vnc_disable_password": true,
      "ssh_username":         "vagrant",
      "ssh_password":         "vagrant",
      "ssh_port":             22,
      "ssh_timeout":          "1h",
      "tools_upload_flavor":  "linux",
      "memory":               "{{ user `memory` }}",
      "cpus":                 "{{ user `cpus` }}",
      "cores":                "{{ user `cores` }}",
      "version":              12,
      "vm_name":              "{{ user `vm_name` }}",
      "remote_type":          "esx5",
      "remote_host":          "{{ user `esxi_host` }}",
      "remote_datastore":     "{{ user `esxi_datastore` }}",
      "remote_username":      "{{ user `esxi_username` }}",
      "remote_password":      "{{ user `esxi_password` }}",
      "shutdown_command":     "echo 'vagrant' | sudo -S /sbin/shutdown -hP now",
      "vmx_data": {
        "ethernet0.pciSlotNumber":  "32",
        "ethernet0.networkName":    "{{ user `network` }}"
      }
    }
  ],
  "post-processors": [
    {
      "type":                 "vsphere-template",
      "datacenter":           "{{ user `vcenter_datacenter` }}",
      "host":                 "{{ user `vcenter_host` }}",
      "username":             "{{ user `vcenter_username` }}",
      "password":             "{{ user `vcenter_password` }}",
      "folder":               "{{ user `vcenter_template_folder` }}",
      "insecure":             true,
      "reregister_vm":        false,
      "only": [
        "vmware-iso"
      ]
    }
  ],
  "provisioners": [
    {
      "type":         "file",
      "source":       "{{ user `ansible_pubkey_src` }}",
      "destination":  "/home/vagrant/id_rsa.pub"
    },
    {
      "environment_vars": [
        "HOME_DIR=/home/vagrant"
      ],
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E sh -eux '{{.Path}}'",
      "expect_disconnect": true,
      "scripts": [
        "{{ template_dir }}/scripts/update.sh",
        "{{ template_dir }}/../_common/motd.sh",
        "{{ template_dir }}/../_common/sshd.sh",
        "{{ template_dir }}/scripts/networking.sh",
        "{{ template_dir }}/scripts/sudoers.sh",
        "{{ template_dir }}/../_common/vagrant.sh",
        "{{ template_dir }}/../_common/ansible.sh",
        "{{ template_dir }}/scripts/systemd.sh",
        "{{ template_dir }}/../_common/open-vm-tools.sh",
        "{{ template_dir }}/scripts/cleanup.sh",
        "{{ template_dir }}/../_common/minimize.sh"
      ]
    }
  ],
  "variables": {
    "ansible_pubkey_src": "{{ env `home` }}/.ssh/id_rsa.pub",
    "build_timestamp":    "{{ isotime \"20060102150405\" }}",
    "vm_name":            "debian-10.4-{{ user `build_timestamp` }}",
    "cpus":               "1",
    "cores":              "1",
    "memory":             "1024",
    "disk_size":          "65536",
    "disk_type_id":       "thin",
    "network":            "VM Network",
    "ip_address":         "192.168.1.11",
    "netmask":            "255.255.255.0",
    "gateway":            "192.168.1.1",
    "nameservers":        "192.168.1.1",
    "domain":             "",
    "iso_checksum":       "sha256:ab3763d553330e90869487a6843c88f1d4aa199333ff16b653e60e59ac1fc60b",
    "iso_name":           "debian-10.4.0-amd64-netinst.iso",
    "mirror":             "http://cdimage.debian.org/cdimage/release",
    "mirror_directory":   "10.4.0/amd64/iso-cd",
    "preseed_path":       "debian-10/preseed.cfg"
  }
}